# API Keys
ANTHROPIC_API_KEY=your_api_key_here

# Vector Store Configuration
VECTOR_STORE_PATH=./.vectorstore

# Embedding Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_TYPE=hosted  # Options: hosted, local
EMBEDDING_MODEL=Alibaba-NLP/gte-Qwen2-7B-instruct
HUGGINGFACE_API_KEY=your_api_key_here
HUGGINGFACE_ENDPOINT_URL=  # Optional: Your HF Inference Endpoint URL
EMBEDDING_DEVICE=mps  # Options: mps, cpu, cuda (if using local embeddings)

# Logging Configuration
LOG_LEVEL=INFO

# Role Configuration
DEFAULT_ROLE=engineer  # Options: beginner, engineer, bd

# Tokenizer Configuration
TOKENIZERS_PARALLELISM=false 